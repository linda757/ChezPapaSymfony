{% extends 'base.html.twig' %}

{% block title %}Modification du Mot de passe{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="row">
            <div class="offset-md-3 col-md-6">
                <div class="jumbotron py-3 px-3">

                    <h1 class="text-center">Modification du mot de passe</h1>
                    {{ form_start(form) }}

                    {{ form_widget(form) }}
